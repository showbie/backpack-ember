<PopperJS @placement="auto-end" as |reference panel|>
  {{yield
    (hash
      isOpen=this.isOpen
      openPopover=this.openPopover
      closePopover=this.closePopover
      Trigger=(component
        "popover/trigger"
        trigger=reference
        triggerGuid=this.triggerGuid
        panelGuid=this.panelGuid
        isOpen=this.isOpen
        openPopover=this.openPopover
        closePopover=this.closePopover
        togglePopover=this.togglePopover
      )
      Panel=(component
        "popover/panel"
        panel=panel
        triggerGuid=this.triggerGuid
        panelGuid=this.panelGuid
        isOpen=this.isOpen
        closePopover=this.closePopover
      )
    )
  }}
</PopperJS>